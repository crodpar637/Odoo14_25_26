<odoo>
    <data>
        <record model="ir.ui.view" id="auto_repair.mechanic_tree">
            <field name="name">Mecanicos</field>
            <field name="model">auto_repair.mechanic</field>
            <field name="arch" type="xml">
                <tree string="Mecanicos">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="employee_id"/>
                    <field name="phone"/>
                    <field name="photo" widget="image"/>
                    <field name="status" widget="statusbar" />
                    <field name="num_repairs"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="auto_repair.mechanic_form">
            <field name="name">Mecanicos</field>
            <field name="model">auto_repair.mechanic</field>
            <field name="arch" type="xml">
                <form string="Mecanicos">
                    <header>
                        <button name="btn_submit_to_active" string="Activar" type="object" class="oe_highlight" />
                        <button name="btn_submit_to_inactive" string="Desactivar" type="object" class="oe_highlight" />
                        <button name="btn_submit_to_on_break" string="Descansar" type="object" class="oe_highlight" />
                        <button name="btn_submit_delete_all_repairs" type="object" string="Eliminar todas las reparaciones" class="btn-danger" confirm="¿Estás seguro de que deseas eliminar todas las reparaciones de este mecánico?" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="employee_id"/>
                            <field name="phone"/>
                            <field name="photo" widget="image"/>
                            <field name="status" widget="statusbar" />
                            <field name="num_repairs"/>
                            <field name="repair_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="auto_repair.action_window_mechanic">
            <field name="name">Mecanicos</field>
            <field name="res_model">auto_repair.mechanic</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>