<odoo>
  <record id="gym_users_form_view" model="ir.ui.view">
    <field name="name">gym.users.form</field>
    <field name="model">gym.users</field>
    <field name="arch" type="xml">
      <form string="Usuarios">
        <sheet layout="auto">
          <group>
            <group>
              <field name="name" />
              <field name="idcard" />
            </group>
            <group>
              <field name="photo" widget="image" options="{'size': [75, 75]}"/>
            </group>

            <field name="classes_ids" widget="many2many" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="gym_users_tree_view" model="ir.ui.view">
    <field name="name">gym.users.tree</field>
    <field name="model">gym.users</field>
    <field name="arch" type="xml">
      <tree string="Usuarios">

        <field name="name" />
        <field name="idcard" />
        <field name="photo" widget="image" options="{'size': [75, 75]}"/>
        <field name="classes_ids" />

      </tree>
    </field>
  </record>

  <record id="users_list_action" model="ir.actions.act_window">
    <field name="name">Usuarios</field>
    <field name="res_model">gym.users</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first user</p>
    </field>
  </record>
</odoo>